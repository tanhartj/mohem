{
  "name": "yt-auto-mega-bot",
  "version": "1.0.0",
  "description": "Legal YouTube automation system with AI content generation, multi-channel management, and Telegram control",
  "main": "core/index.js",
  "type": "module",
  "scripts": {
    "start": "node core/index.js",
    "dev": "nodemon core/index.js",
    "worker": "node workers/videoProcessor.js",
    "setup": "node scripts/setup.js",
    "init-db": "node scripts/init-db.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --runInBand",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "docker-build": "docker build -t yt-viral-bot .",
    "docker-run": "docker run --env-file .env -p 3000:3000 yt-viral-bot"
  },
  "keywords": ["youtube", "automation", "ai", "content-generation", "telegram", "video-editing"],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "openai": "^4.20.0",
    "googleapis": "^128.0.0",
    "node-telegram-bot-api": "^0.64.0",
    "fluent-ffmpeg": "^2.1.2",
    "better-sqlite3": "^9.2.2",
    "dotenv": "^16.3.1",
    "dotenv-safe": "^9.1.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "bull": "^4.12.0",
    "ioredis": "^5.3.2",
    "axios": "^1.6.2",
    "sharp": "^0.33.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "node-cron": "^3.0.3",
    "lodash": "^4.17.21",
    "dayjs": "^1.11.10",
    "redis": "^4.6.0",
    "joi": "^17.11.0",
    "bcrypt": "^5.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  }
}
